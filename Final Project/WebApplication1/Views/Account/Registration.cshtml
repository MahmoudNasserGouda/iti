@model UserViewModel
@{
    Layout = "_Login_Registration";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <style>
        label {
            font-weight: bold;
            color: darkslategray
        }
    </style>
</head>
<body>
    <form action="/Account/Registration/@Model" method="post">
        <div class="form-floating mb-3">
            <label asp-for="UserName" ></label>
            <input asp-for="UserName" class="form-control" style="
    margin-left: 52px;
" />
            <span asp-validation-for="UserName" style="color:brown ;display:inline-block"></span>
        </div>
        <br />
        <div class="form-floating mb-3">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" style="
    margin-left: 91px;
" />
            <span asp-validation-for="Email" style="color:brown ;display:inline-block"></span>
        </div>
        <br />
        <div class="form-floating mb-3">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" class="form-control" style="
    margin-left: 19px;
" />
            <span asp-validation-for="PhoneNumber" style="color:brown ;display:inline-block"></span>
        </div>
        <br />
        <div class="form-floating mb-3">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" style="
    margin-left: 55px;
" />
            <span asp-validation-for="Password" style="color:brown ;display:inline-block"></span>
        </div>
        <br />
        <div class="form-floating mb-3">
            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" style="color:brown ;display:inline-block"></span>
        </div>
        <br />
        <input type="submit" value="Register" class="btn btn-primary" />
        <br />
        <div asp-validation-summary="All" class="text-danger" style="color:brown"></div>
        <a href="/Account/Login" style="color:firebrick"> Already Signed Up?</a>
    </form>


</body>
</html>



