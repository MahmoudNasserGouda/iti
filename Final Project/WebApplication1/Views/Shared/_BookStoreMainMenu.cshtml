	<script>
		function GetAnnouncement(){

			// Check if user is admin
			let isAdmin = true;

			// Get elements
			const adminBtn = document.getElementById('adminBtn');
			const adminWindow = document.getElementById('adminWindow');
			const form = adminWindow.querySelector('form');
			const head = document.querySelector('.info-content h2');
			const p1 = document.querySelector('.info-content p:nth-of-type(1)');
			const p2 = document.querySelector('.info-content p:nth-of-type(2)');
			//const img = document.querySelector('.info-content img');

			head.textContent = head.attributes.data.value;
			p1.textContent = p1.attributes.data.value;
			p2.textContent = p2.attributes.data.value;

			// Show/hide window on click
			adminBtn.addEventListener('click', () => {
				adminWindow.style.display = 'block';
			});

			// Handle form submission
			form.addEventListener('submit', (event) => {
				// Prevent default form submission behavior
				event.preventDefault();

				// Extract form data
				const formData = new FormData(form);
				const headValue = formData.get('head');
				const p1Value = formData.get('p1');
				const p2Value = formData.get('p2');
				//const imageFile = formData.get('image');

				// Set text content
				head.textContent = headValue;
				p1.textContent = p1Value;
				p2.textContent = p2Value;

				head.attributes.data.value = headValue;
				p1.attributes.data.value = p1Value;
				p2.attributes.data.value = p2Value;

				// Set image source
				//if (imageFile) {
				//    const imageURL = URL.createObjectURL(imageFile);
				//    img.src = imageURL;
				//}

				// Clear form fields
				form.reset();

				// Hide window
				adminWindow.style.display = 'none';
			});
		}
		GetAnnouncement();
	</script>
