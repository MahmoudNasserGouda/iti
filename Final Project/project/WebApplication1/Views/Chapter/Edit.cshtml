@model Chapter
@{
    Layout = null;
}


@using (Html.BeginForm())
{
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group row g-0 mb-3">
            @Html.LabelFor(m => m.ID, "ID", new { @class = "form-label" })
            <div class="col-md-8 offset-2">
                @Html.EditorFor(m => m.ID, new { htmlAttributes = new { @class = "form-control disabled", @Value = @Model.ID }})
            </div>
        </div>

        <div class="form-group row g-0 mb-3">
            @Html.LabelFor(m => m.Title, "Title", new { @class = "form-label" })
            <div class="col-md-8 offset-2">
                @Html.EditorFor(m => m.Title, new { htmlAttributes = new { @class = "form-control", @Value = @Model.Title }})
                @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row g-0 mb-3">
            @Html.LabelFor(m => m.Content, "Content", new { @class = "form-label" })
            <div class="col-md-8 offset-2">
                @Html.TextAreaFor(m => m.Content, new { htmlAttributes = new { @class = "form-control", @Value = @Model.Content }})
                @Html.ValidationMessageFor(m => m.Content, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
}
