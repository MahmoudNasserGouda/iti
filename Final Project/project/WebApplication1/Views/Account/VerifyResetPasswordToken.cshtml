@model ResetPasswordVM

@{
    Layout = "_Login_Registration";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        label {
            font-weight: bold;
            color: darkslategray
        }
    </style>

</head>
<body>
    <form action="/Account/ResetUserPassword/@Model" method="post">
        <div class="form-floating mb-3">
            <input hidden asp-for="Email" class="form-control" />
        </div>
        <div class="form-floating mb-3">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" style="color:brown;display:inline-block"></span>
        </div>
        <div class="form-floating mb-3" style="">
            <label asp-for="ConfirmPassword" style="padding-right:7px;padding-bottom:10px"></label>
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" style="color:brown;display:inline-block"></span>
        </div>

        <div asp-validation-summary="All" class="text-danger" style="color:brown"></div>
        <input type="submit" value="Reset Password" class="btn btn-primary" />
    </form>

</body>
</html>


