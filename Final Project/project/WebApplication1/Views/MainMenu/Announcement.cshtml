@model WebApplication1.Models.Objects.Announcement
@{
    Layout = null;
}

<section class="section-gap info-area" id="about">
	<div class="container">
		<div class="single-info row mt-40 align-items-center">
			<div class="col-lg-6 col-md-12 text-center no-padding info-left">
				<div class="info-thumb">
					<img src="~/assets/MainMenuBookimg/about-img1.jpg" class="img-fluid info-img" alt="">
				</div>
			</div>
			<div class="col-lg-6 col-md-12 no-padding info-rigth">
				<div class="info-content">
					<h2 class="pb-30">@Model.Head</h2>
					<p>@Model.P1</p>
					<br>
					<p>@Model.P2</p>
					<br>
					<img src="~/assets/MainMenuBookimg/signature.png" alt="">
				</div>
				<div class="m-3">
					@if (User.IsInRole("Admin"))
					{
						<button class="btn btn-primary" id="adminBtn">Admin Only</button>
					}
				</div>
			</div>
		</div>

		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<div id="adminWindow" class="mt-3" style="display: none;">
						<form method="post" asp-controller="Admin" asp-action="SubmitForm">
							<div class="form-group">
								<label for="head">Head:</label>
								<input type="text" class="form-control" id="head" name="head" required>
							</div>
							<div class="form-group">
								<label for="p1">Para 1:</label>
								<input type="text" class="form-control" id="p1" name="p1">
							</div>
							<div class="form-group">
								<label for="p2">Para 2:</label>
								<input type="text" class="form-control" id="p2" name="p2">
							</div>
							<button type="submit" class="btn btn-primary">Submit</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
